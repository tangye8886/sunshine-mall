<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sunshine.mallweb.dao.OrderMasterDao">

    <resultMap id="baseResultMap" type="com.sunshine.mallweb.entity.OrderMaster">
        <id property="orderId" column="order_id"></id>
        <result property="accountId" column="account_id"></result>
        <result property="accountName" column="account_name"></result>
        <result property="buyerName" column="buyer_name"></result>
        <result property="buyerPhone" column="buyer_phone"></result>
        <result property="buyerAddress" column="buyer_address"></result>
        <result property="buyerOpenid" column="buyer_openid"></result>
        <result property="orderAmount" column="order_amount"></result>
        <result property="orderStatus" column="order_status"></result>
        <result property="payStatus" column="pay_status"></result>
        <collection property="orderDetailList" javaType="java.util.ArrayList" ofType="com.sunshine.mallweb.entity.OrderDetail" select="com.sunshine.mallweb.dao.OrderDetailDao.getOrderDetailListByOrderId" column="order_id">
            <id property="detailId" column="detail_id"></id>
            <result property="orderId" column="order_id"></result>
            <result property="productId" column="product_id"></result>
            <result property="productName" column="product_name"></result>
            <result property="productPrice" column="product_price"></result>
            <result property="productQuantity" column="product_quantity"></result>
            <association property="productInfo" javaType="com.sunshine.mallweb.entity.ProductInfo" select="com.sunshine.mallweb.dao.ProductInfoDao.getProductInfoById" column="product_id">
                <id property="id" column="id"></id>
                <result property="productNo" column="product_no"></result>
                <result property="productName" column="product_name"></result>
                <result property="productPrice" column="product_price"></result>
                <result property="productDescription" column="product_description"></result>
                <result property="productImg" column="product_img"></result>
                <result property="categoryType" column="category_type"></result>
                <result property="productInventory" column="product_inventory"></result>
            </association>
        </collection>
    </resultMap>


    <select id="getOrderMasterListByConditionPage" parameterType="com.sunshine.mallweb.dto.OrderMasterDTO" resultMap="baseResultMap">
        SELECT
         *
        FROM
        order_master
        WHERE
        1=1
        <if test="orderMaster.accountId != null and orderMaster.accountId != ''">
            and account_id = #{product.accountId}
        </if>
        <if test="orderMaster.buyerName != null and orderMaster.buyerName != ''">
            and buyer_name  like concat('%', #{orderMaster.buyerName},'%')
        </if>
        <if test="orderMaster.orderStatus != null">
            and order_status = #{orderMaster.orderStatus}
        </if>
        <if test="orderMaster.enabled != null">
            and enabled = #{orderMaster.enabled}
        </if>

    </select>


    <select id="getOrderMasterById" parameterType="java.lang.String" resultMap="baseResultMap">
        select * from order_master where id=#{id}
    </select>

</mapper>