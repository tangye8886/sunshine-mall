<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sunshine.mallweb.dao.ProductCartDao">

    <resultMap id="baseResultMap" type="com.sunshine.mallweb.entity.ProductCart">
        <id property="cartId" column="cart_id"></id>
        <result property="accountId" column="account_id"></result>
        <result property="productId" column="product_id"></result>
        <result property="productAmount" column="product_amount"></result>
        <association property="productInfo" javaType="com.sunshine.mallweb.entity.ProductInfo" select="com.sunshine.mallweb.dao.ProductInfoDao.getProductInfoById" column="product_id">
            <id property="id" column="id"></id>
            <result property="productNo" column="product_no"></result>
            <result property="productName" column="product_name"></result>
            <result property="productPrice" column="product_price"></result>
            <result property="productDescription" column="product_description"></result>
            <result property="productImg" column="product_img"></result>
            <result property="categoryType" column="category_type"></result>
            <result property="productInventory" column="product_inventory"></result>
            <result property="createTime" column="create_time"></result>
            <result property="updateTime" column="update_time"></result>
        </association>
    </resultMap>


    <select id="getProductCartListByConditionPage" parameterType="com.sunshine.mallweb.dto.CartDTO" resultMap="baseResultMap">
        SELECT
         *
        FROM
        product_cart
        WHERE
        1=1
        <if test="cart.accountId != null and cart.accountId != ''">
            and account_id = #{cart.accountId}
        </if>
    </select>


    <select id="getProductCartById" parameterType="java.lang.String" resultMap="baseResultMap">
        select * from product_cart where id=#{id}
    </select>

</mapper>